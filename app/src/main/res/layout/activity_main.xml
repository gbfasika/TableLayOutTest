<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/idVersion"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter Android Version"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/code_id"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="93dp"
        android:ems="10"
        android:hint="Enter Android code Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="185dp"
        android:text="ADD" />

    <TableLayout
        android:id="@+id/table_id"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="251dp"
        android:background="#DE48A7"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:padding="5sp"
                android:text="Version" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="194dp"
                android:layout_height="51dp"
                android:text="code Name" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="194dp"
                android:layout_height="51dp"
                android:text="Android 8.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:text="Oreo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="194dp"
                android:layout_height="41dp"
                android:text="Android 10.9" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="194dp"
                android:layout_height="match_parent"
                android:text="Android" />
        </TableRow>

    </TableLayout>
</RelativeLayout>